<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:id="@+id/sample_text"
            android:layout_width="305dp"
            android:layout_height="47dp"
            android:text="Hola mundo en ANDROID"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:textSize="24sp"
            android:fontFamily="monospace"
            app:layout_constraintEnd_toStartOf="@+id/imageView4" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/imageView5" app:layout_constraintVertical_bias="0.0"/>
    <Switch
            android:text="Switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/switch1" android:textStyle="italic" app:layout_constraintStart_toEndOf="@+id/editText"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/editText2"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="@+id/editText3"/>
    <Button
            android:text="Boton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="107dp" android:id="@+id/button"
            android:visibility="visible"
            android:textSize="18sp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/editText3"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Nombre"
            android:ems="10"
            tools:layout_editor_absoluteX="40dp" android:id="@+id/editText" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/sample_text"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/editText2"
            android:text="E-mail" app:layout_constraintStart_toStartOf="@+id/editText"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editText" android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editText3"
            android:text="ContraseÃ±a"
            app:layout_constraintStart_toStartOf="@+id/editText2"
            app:layout_constraintTop_toBottomOf="@+id/editText2" android:layout_marginTop="12dp"/>
    <SearchView
            android:layout_width="339dp"
            android:layout_height="54dp" tools:layout_editor_absoluteX="13dp"
            app:layout_constraintTop_toBottomOf="@+id/button" android:layout_marginTop="12dp"
            android:id="@+id/searchView"/>
    <VideoView
            android:layout_width="297dp"
            android:layout_height="58dp"
            tools:layout_editor_absoluteX="40dp" android:id="@+id/videoView" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/searchView"/>
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteY="252dp" tools:layout_editor_absoluteX="255dp" android:id="@+id/progressBar"/>
    <View
            android:id="@+id/divider"
            android:layout_width="368dp"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            tools:layout_editor_absoluteX="6dp" app:layout_constraintTop_toBottomOf="@+id/videoView"
            android:layout_marginTop="32dp"/>
    <ImageView
            android:layout_width="56dp"
            android:layout_height="41dp" app:srcCompat="@android:drawable/checkbox_on_background"
            tools:layout_editor_absoluteY="16dp" android:id="@+id/imageView4"
            app:layout_constraintStart_toEndOf="@+id/sample_text"
    />
    <ImageView
            android:layout_width="118dp"
            android:layout_height="184dp" tools:srcCompat="@tools:sample/backgrounds/scenic[12]"
            tools:layout_editor_absoluteY="16dp" android:id="@+id/imageView5"
            app:layout_constraintStart_toEndOf="@+id/editText2" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>

</android.support.constraint.ConstraintLayout>